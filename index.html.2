<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestor de Eletrônicos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        /* Custom scrollbar for better look */
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
        
        .fade-in { animation: fadeIn 0.3s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="text-slate-800 min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="bg-indigo-600 text-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <i class="ph ph-devices text-3xl"></i>
                <h1 class="text-xl font-bold tracking-tight">GestorTech</h1>
            </div>
            <div class="text-indigo-200 text-sm flex items-center gap-2">
                <div id="connection-status" class="w-2 h-2 rounded-full bg-yellow-400 animate-pulse"></div>
                <span id="connection-text">Conectando...</span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full relative">
        
        <!-- Loading Overlay -->
        <div id="loading-overlay" class="absolute inset-0 bg-slate-50/80 z-10 flex flex-col items-center justify-center rounded-xl">
            <i class="ph ph-spinner animate-spin text-4xl text-indigo-600 mb-2"></i>
            <p class="text-slate-500 font-medium">Carregando dados...</p>
        </div>

        <!-- Dashboard Section -->
        <section class="mb-8 fade-in">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end mb-4 gap-4">
                <h2 class="text-2xl font-bold text-slate-800">Visão Financeira</h2>
                <div class="flex flex-col">
                    <label for="month-filter" class="text-sm font-medium text-slate-500 mb-1">Filtrar por período</label>
                    <select id="month-filter" class="bg-white border border-slate-300 text-slate-700 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 shadow-sm outline-none transition-colors">
                        <option value="all">Todo o período</option>
                        <!-- Options populated via JS -->
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Total Cost -->
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-4">
                    <div class="bg-red-100 p-3 rounded-xl text-red-600">
                        <i class="ph ph-trend-down text-2xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Custo Total (Compras)</p>
                        <h3 id="dash-cost" class="text-2xl font-bold text-slate-800">R$ 0,00</h3>
                    </div>
                </div>
                
                <!-- Total Revenue -->
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-4">
                    <div class="bg-blue-100 p-3 rounded-xl text-blue-600">
                        <i class="ph ph-trend-up text-2xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Receita Total (Vendas)</p>
                        <h3 id="dash-revenue" class="text-2xl font-bold text-slate-800">R$ 0,00</h3>
                    </div>
                </div>

                <!-- Total Profit -->
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-4 relative overflow-hidden group">
                    <div id="profit-bg" class="absolute inset-0 bg-green-50 opacity-0 transition-opacity"></div>
                    <div id="profit-icon-container" class="bg-green-100 p-3 rounded-xl text-green-600 relative z-10">
                        <i id="profit-icon" class="ph ph-currency-circle-dollar text-2xl"></i>
                    </div>
                    <div class="relative z-10">
                        <p class="text-sm font-medium text-slate-500">Lucro Total</p>
                        <h3 id="dash-profit" class="text-3xl font-black text-green-600">R$ 0,00</h3>
                    </div>
                </div>
            </div>
        </section>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 fade-in" style="animation-delay: 0.1s;">
            
            <!-- Add Product Form -->
            <section class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 sticky top-6">
                    <h2 class="text-lg font-bold text-slate-800 mb-4 flex items-center gap-2">
                        <i class="ph ph-plus-circle text-indigo-600"></i>
                        Registrar Nova Compra
                    </h2>
                    
                    <form id="form-add-product" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Produto (Nome/Modelo)</label>
                            <input type="text" id="add-name" required placeholder="Ex: iPhone 13 Pro 128GB" 
                                class="w-full border border-slate-300 rounded-lg p-2.5 outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Preço de Compra (R$)</label>
                            <input type="number" id="add-price" required min="0.01" step="0.01" placeholder="0,00" 
                                class="w-full border border-slate-300 rounded-lg p-2.5 outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Data da Compra</label>
                            <input type="date" id="add-date" required 
                                class="w-full border border-slate-300 rounded-lg p-2.5 outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all text-slate-700">
                        </div>
                        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg py-2.5 px-4 transition-colors flex justify-center items-center gap-2">
                            <i class="ph ph-check-circle text-lg"></i>
                            Adicionar ao Estoque
                        </button>
                    </form>
                </div>
            </section>

            <!-- Product List -->
            <section class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                            <i class="ph ph-list-dashes text-indigo-600"></i>
                            Meus Produtos
                        </h2>
                        <span id="product-count" class="bg-slate-100 text-slate-600 text-xs font-semibold px-2.5 py-1 rounded-full">0 itens</span>
                    </div>

                    <!-- Empty State -->
                    <div id="empty-state" class="hidden flex-col items-center justify-center py-12 text-center">
                        <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mb-4">
                            <i class="ph ph-package text-3xl text-slate-400"></i>
                        </div>
                        <h3 class="text-slate-800 font-medium mb-1">Nenhum produto cadastrado</h3>
                        <p class="text-slate-500 text-sm max-w-xs">Adicione sua primeira compra no formulário ao lado para começar a gerenciar seu negócio.</p>
                    </div>

                    <!-- List Container -->
                    <div id="product-list" class="space-y-4">
                        <!-- Product Cards Injected Here -->
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Modal: Sell Product -->
    <div id="modal-sell" class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4 transition-opacity">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md overflow-hidden animate-[fadeIn_0.2s_ease-out]">
            <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50">
                <h3 class="font-bold text-slate-800 flex items-center gap-2">
                    <i class="ph ph-shopping-cart text-indigo-600"></i>
                    Registrar Venda
                </h3>
                <button onclick="closeSellModal()" class="text-slate-400 hover:text-slate-600 transition-colors">
                    <i class="ph ph-x text-xl"></i>
                </button>
            </div>
            <div class="p-6">
                <p class="text-sm text-slate-500 mb-4">Produto: <strong id="sell-product-name" class="text-slate-800"></strong></p>
                <form id="form-sell-product" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Preço de Venda (R$)</label>
                        <input type="number" id="sell-price" required min="0.01" step="0.01" placeholder="0,00" 
                            class="w-full border border-slate-300 rounded-lg p-2.5 outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Data da Venda</label>
                        <input type="date" id="sell-date" required 
                            class="w-full border border-slate-300 rounded-lg p-2.5 outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all text-slate-700">
                    </div>
                    <div class="pt-2 flex gap-3">
                        <button type="button" onclick="closeSellModal()" class="flex-1 bg-white border border-slate-300 text-slate-700 hover:bg-slate-50 font-medium rounded-lg py-2.5 px-4 transition-colors">
                            Cancelar
                        </button>
                        <button type="submit" class="flex-1 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg py-2.5 px-4 transition-colors">
                            Confirmar Venda
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Custom Confirm -->
    <div id="modal-confirm" class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-[60] hidden flex items-center justify-center p-4 transition-opacity">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-sm overflow-hidden animate-[fadeIn_0.2s_ease-out]">
            <div class="p-6 text-center">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4 text-red-600">
                    <i class="ph ph-warning-circle text-3xl"></i>
                </div>
                <h3 id="confirm-title" class="font-bold text-slate-800 text-lg mb-2">Tem certeza?</h3>
                <p id="confirm-text" class="text-slate-500 text-sm mb-6">Esta ação não poderá ser desfeita.</p>
                <div class="flex gap-3">
                    <button onclick="closeConfirmModal()" class="flex-1 bg-slate-100 text-slate-700 hover:bg-slate-200 font-medium rounded-lg py-2.5 px-4 transition-colors">
                        Cancelar
                    </button>
                    <button onclick="executeConfirm()" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg py-2.5 px-4 transition-colors">
                        Sim, excluir
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-[70] flex flex-col gap-2"></div>

    <!-- Firebase & App Logic -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, onSnapshot, addDoc, updateDoc, deleteDoc, doc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global State
        let db, auth, currentUser, unsubscribeSnapshot;
        let productsData = [];
        let selectedProductId = null;
        let confirmActionCallback = null;
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'eletronicos-manager-app';

        // Set default date to today for inputs
        document.getElementById('add-date').valueAsDate = new Date();
        document.getElementById('sell-date').valueAsDate = new Date();

        // 1. Initialize Firebase
        const initFirebase = async () => {
            try {
                let firebaseConfig;
                if (typeof __firebase_config !== 'undefined') {
                    firebaseConfig = JSON.parse(__firebase_config);
                } else {
                    // Fallback for local testing (mock config, won't actually connect without valid credentials)
                    firebaseConfig = { apiKey: "", projectId: "demo-project" };
                }

                const app = initializeApp(firebaseConfig);
                auth = getAuth(app);
                db = getFirestore(app);

                // Auth Flow
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                } else {
                    await signInAnonymously(auth);
                }

                // Listen to Auth State
                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        currentUser = user;
                        document.getElementById('connection-status').classList.replace('bg-yellow-400', 'bg-green-500');
                        document.getElementById('connection-status').classList.remove('animate-pulse');
                        document.getElementById('connection-text').innerText = 'Conectado (Nuvem)';
                        fetchData();
                    } else {
                        currentUser = null;
                    }
                });
            } catch (error) {
                console.error("Firebase Init Error:", error);
                showToast("Erro ao conectar ao banco de dados.", "error");
                document.getElementById('loading-overlay').classList.add('hidden');
            }
        };

        // 2. Fetch Data (Real-time listener)
        const fetchData = () => {
            if (!currentUser) return;

            const productsRef = collection(db, 'artifacts', appId, 'users', currentUser.uid, 'products');
            
            if (unsubscribeSnapshot) unsubscribeSnapshot();

            unsubscribeSnapshot = onSnapshot(productsRef, (snapshot) => {
                productsData = [];
                snapshot.forEach((doc) => {
                    productsData.push({ id: doc.id, ...doc.data() });
                });
                
                // Sort by purchase date descending
                productsData.sort((a, b) => new Date(b.buyDate) - new Date(a.buyDate));
                
                document.getElementById('loading-overlay').classList.add('hidden');
                updateUI();
            }, (error) => {
                console.error("Firestore Error:", error);
                showToast("Erro ao carregar os dados.", "error");
                document.getElementById('loading-overlay').classList.add('hidden');
            });
        };

        // 3. UI Update Logic
        const updateUI = () => {
            updateDashboard();
            renderProductList();
            updateMonthFilterOptions();
        };

        const formatCurrency = (value) => {
            return new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(value);
        };

        const formatDate = (dateString) => {
            // Append T00:00:00 to avoid timezone shift making it one day off locally
            const date = new Date(dateString + 'T00:00:00');
            return new Intl.DateTimeFormat('pt-BR').format(date);
        };

        // Month Filter Logic
        const getFilterValue = () => document.getElementById('month-filter').value;

        document.getElementById('month-filter').addEventListener('change', () => {
            updateDashboard();
        });

        const updateMonthFilterOptions = () => {
            const select = document.getElementById('month-filter');
            const currentValue = select.value;
            
            // Collect unique YYYY-MM strings
            const months = new Set();
            productsData.forEach(p => {
                if (p.buyDate) months.add(p.buyDate.substring(0, 7));
                if (p.sellDate) months.add(p.sellDate.substring(0, 7));
            });

            // Convert to array and sort descending
            const sortedMonths = Array.from(months).sort().reverse();

            // Rebuild options
            let html = '<option value="all">Todo o período</option>';
            sortedMonths.forEach(monthStr => {
                const [year, month] = monthStr.split('-');
                const date = new Date(year, parseInt(month) - 1, 1);
                const monthName = date.toLocaleString('pt-BR', { month: 'short', year: 'numeric' });
                // Capitalize first letter
                const formattedName = monthName.charAt(0).toUpperCase() + monthName.slice(1);
                html += `<option value="${monthStr}">${formattedName}</option>`;
            });

            select.innerHTML = html;
            
            // Restore selection if it still exists
            if (sortedMonths.includes(currentValue)) {
                select.value = currentValue;
            } else {
                select.value = 'all';
            }
        };

        const updateDashboard = () => {
            const filter = getFilterValue();
            let totalCost = 0;
            let totalRevenue = 0;

            productsData.forEach(p => {
                const buyMonth = p.buyDate ? p.buyDate.substring(0, 7) : null;
                // Add to cost if it matches filter or filter is all
                if (filter === 'all' || filter === buyMonth) {
                    totalCost += Number(p.buyPrice) || 0;
                }

                if (p.status === 'sold') {
                    const sellMonth = p.sellDate ? p.sellDate.substring(0, 7) : null;
                    // Add to revenue if sale matches filter
                    if (filter === 'all' || filter === sellMonth) {
                        totalRevenue += Number(p.sellPrice) || 0;
                    }
                }
            });

            const profit = totalRevenue - totalCost;

            // Update DOM
            document.getElementById('dash-cost').innerText = formatCurrency(totalCost);
            document.getElementById('dash-revenue').innerText = formatCurrency(totalRevenue);
            
            const profitEl = document.getElementById('dash-profit');
            const profitIconContainer = document.getElementById('profit-icon-container');
            const profitIcon = document.getElementById('profit-icon');
            const profitBg = document.getElementById('profit-bg');

            profitEl.innerText = formatCurrency(profit);

            // Styling based on profit positive/negative/neutral
            if (profit > 0) {
                profitEl.className = "text-3xl font-black text-green-600";
                profitIconContainer.className = "bg-green-100 p-3 rounded-xl text-green-600 relative z-10 transition-colors";
                profitIcon.className = "ph ph-trend-up text-2xl";
                profitBg.className = "absolute inset-0 bg-green-50 opacity-100 transition-opacity";
            } else if (profit < 0) {
                profitEl.className = "text-3xl font-black text-red-600";
                profitIconContainer.className = "bg-red-100 p-3 rounded-xl text-red-600 relative z-10 transition-colors";
                profitIcon.className = "ph ph-trend-down text-2xl";
                profitBg.className = "absolute inset-0 bg-red-50 opacity-100 transition-opacity";
            } else {
                profitEl.className = "text-3xl font-black text-slate-800";
                profitIconContainer.className = "bg-slate-100 p-3 rounded-xl text-slate-600 relative z-10 transition-colors";
                profitIcon.className = "ph ph-minus text-2xl";
                profitBg.className = "absolute inset-0 bg-transparent opacity-0 transition-opacity";
            }
        };

        const renderProductList = () => {
            const listContainer = document.getElementById('product-list');
            const emptyState = document.getElementById('empty-state');
            document.getElementById('product-count').innerText = `${productsData.length} ${productsData.length === 1 ? 'item' : 'itens'}`;

            if (productsData.length === 0) {
                listContainer.innerHTML = '';
                emptyState.classList.remove('hidden');
                emptyState.classList.add('flex');
                return;
            }

            emptyState.classList.add('hidden');
            emptyState.classList.remove('flex');
            
            let html = '';
            productsData.forEach(p => {
                const isSold = p.status === 'sold';
                const statusBadge = isSold 
                    ? `<span class="px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 flex items-center gap-1 w-fit"><i class="ph ph-check-circle"></i> Vendido</span>`
                    : `<span class="px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800 flex items-center gap-1 w-fit"><i class="ph ph-package"></i> Em Estoque</span>`;
                
                let financialDetails = `
                    <div class="flex flex-col">
                        <span class="text-xs text-slate-500">Custo</span>
                        <span class="font-medium text-slate-800">${formatCurrency(p.buyPrice)}</span>
                    </div>
                `;

                if (isSold) {
                    const itemProfit = p.sellPrice - p.buyPrice;
                    const profitClass = itemProfit >= 0 ? 'text-green-600' : 'text-red-600';
                    financialDetails += `
                        <div class="flex flex-col border-l border-slate-200 pl-4">
                            <span class="text-xs text-slate-500">Venda (${formatDate(p.sellDate)})</span>
                            <span class="font-medium text-slate-800">${formatCurrency(p.sellPrice)}</span>
                        </div>
                        <div class="flex flex-col border-l border-slate-200 pl-4">
                            <span class="text-xs text-slate-500">Lucro</span>
                            <span class="font-bold ${profitClass}">${formatCurrency(itemProfit)}</span>
                        </div>
                    `;
                }

                const actions = !isSold 
                    ? `<button onclick="window.triggerSell('${p.id}', '${p.name.replace(/'/g, "\\'")}')" class="text-sm bg-indigo-50 hover:bg-indigo-100 text-indigo-700 font-medium py-1.5 px-3 rounded transition-colors flex items-center gap-1">
                            <i class="ph ph-currency-dollar"></i> Vender
                       </button>`
                    : `<span class="text-sm text-slate-400 italic">Negócio fechado</span>`;

                html += `
                    <div class="bg-white border border-slate-200 rounded-xl p-4 hover:shadow-md transition-shadow relative group">
                        <button onclick="window.triggerDelete('${p.id}')" class="absolute top-4 right-4 text-slate-300 hover:text-red-500 transition-colors" title="Excluir">
                            <i class="ph ph-trash text-lg"></i>
                        </button>
                        
                        <div class="flex flex-col sm:flex-row justify-between gap-4">
                            <div class="space-y-2 flex-grow pr-6">
                                <div class="flex flex-wrap items-center gap-2">
                                    <h3 class="font-bold text-slate-800 text-lg">${p.name}</h3>
                                    ${statusBadge}
                                </div>
                                <p class="text-xs text-slate-500 flex items-center gap-1">
                                    <i class="ph ph-calendar-blank"></i> Comprado em ${formatDate(p.buyDate)}
                                </p>
                            </div>
                            
                            <div class="flex flex-col gap-3 sm:items-end border-t sm:border-t-0 border-slate-100 pt-3 sm:pt-0">
                                <div class="flex gap-4 sm:justify-end">
                                    ${financialDetails}
                                </div>
                                <div class="mt-auto">
                                    ${actions}
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });

            listContainer.innerHTML = html;
        };

        // 4. Data Operations
        document.getElementById('form-add-product').addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!currentUser) return;

            const name = document.getElementById('add-name').value.trim();
            const price = parseFloat(document.getElementById('add-price').value);
            const date = document.getElementById('add-date').value;

            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="ph ph-spinner animate-spin"></i> Salvando...';
            btn.disabled = true;

            try {
                const docData = {
                    name,
                    buyPrice: price,
                    buyDate: date,
                    status: 'stock',
                    createdAt: new Date().toISOString()
                };

                await addDoc(collection(db, 'artifacts', appId, 'users', currentUser.uid, 'products'), docData);
                
                showToast("Produto adicionado com sucesso!");
                e.target.reset();
                document.getElementById('add-date').valueAsDate = new Date();
            } catch (error) {
                console.error("Erro ao adicionar:", error);
                showToast("Erro ao adicionar produto.", "error");
            } finally {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        document.getElementById('form-sell-product').addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!currentUser || !selectedProductId) return;

            const sellPrice = parseFloat(document.getElementById('sell-price').value);
            const sellDate = document.getElementById('sell-date').value;

            const btn = e.target.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="ph ph-spinner animate-spin"></i> Confirmando...';
            btn.disabled = true;

            try {
                const docRef = doc(db, 'artifacts', appId, 'users', currentUser.uid, 'products', selectedProductId);
                await updateDoc(docRef, {
                    status: 'sold',
                    sellPrice: sellPrice,
                    sellDate: sellDate
                });
                
                showToast("Venda registrada com sucesso!");
                window.closeSellModal();
            } catch (error) {
                console.error("Erro ao vender:", error);
                showToast("Erro ao registrar venda.", "error");
            } finally {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        const deleteProduct = async (id) => {
            if (!currentUser) return;
            try {
                await deleteDoc(doc(db, 'artifacts', appId, 'users', currentUser.uid, 'products', id));
                showToast("Produto excluído.");
            } catch (error) {
                console.error("Erro ao excluir:", error);
                showToast("Erro ao excluir.", "error");
            }
        };

        // 5. Global Window Functions (for inline HTML events)
        window.triggerSell = (id, name) => {
            selectedProductId = id;
            document.getElementById('sell-product-name').innerText = name;
            const modal = document.getElementById('modal-sell');
            modal.classList.remove('hidden');
            
            // Focus on price input slightly after animation
            setTimeout(() => document.getElementById('sell-price').focus(), 100);
        };

        window.closeSellModal = () => {
            document.getElementById('modal-sell').classList.add('hidden');
            document.getElementById('form-sell-product').reset();
            document.getElementById('sell-date').valueAsDate = new Date();
            selectedProductId = null;
        };

        window.triggerDelete = (id) => {
            document.getElementById('confirm-title').innerText = "Excluir Produto?";
            document.getElementById('confirm-text').innerText = "Esta ação removerá este produto e seus dados financeiros permanentemente.";
            
            confirmActionCallback = () => deleteProduct(id);
            document.getElementById('modal-confirm').classList.remove('hidden');
        };

        window.closeConfirmModal = () => {
            document.getElementById('modal-confirm').classList.add('hidden');
            confirmActionCallback = null;
        };

        window.executeConfirm = () => {
            if (confirmActionCallback) confirmActionCallback();
            window.closeConfirmModal();
        };

        // Toast Notification System
        window.showToast = (message, type = 'success') => {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            
            const bgColor = type === 'success' ? 'bg-slate-800' : 'bg-red-600';
            const icon = type === 'success' ? '<i class="ph ph-check-circle text-green-400 text-lg"></i>' : '<i class="ph ph-warning-circle text-white text-lg"></i>';
            
            toast.className = `${bgColor} text-white px-4 py-3 rounded-lg shadow-lg flex items-center gap-3 text-sm font-medium transform transition-all duration-300 translate-y-10 opacity-0`;
            toast.innerHTML = `${icon} ${message}`;
            
            container.appendChild(toast);
            
            // Trigger animation
            setTimeout(() => {
                toast.classList.remove('translate-y-10', 'opacity-0');
            }, 10);
            
            // Remove after 3s
            setTimeout(() => {
                toast.classList.add('translate-y-10', 'opacity-0');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        };

        // Boot
        initFirebase();
    </script>
